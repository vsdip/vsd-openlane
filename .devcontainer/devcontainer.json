{
  "name": "OpenLane Codespace (GUI + noVNC)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC (Magic) Desktop",
      "onAutoForward": "openBrowser"
    }
  },
  "overrideCommand": false,
  "remoteUser": "root",
  "containerEnv": {
    "DISPLAY": ":1"
  },
  "postCreateCommand": "bash .devcontainer/setup.sh"
}
