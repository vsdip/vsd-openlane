{
  "name": "OpenLane (superstable) â€“ dind stable",
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": { "version": "latest", "moby": false }
  },
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "mounts": [
    "source=ol-pdk-cache,type=volume,target=/workspaces/.pdk",
    "source=ol-docker-cache,type=volume,target=/var/lib/docker"
  ],
  "containerEnv": {
    "OPENLANE_DIR": "/workspaces/OpenLane",
    "WORKSHOP_HOME": "/home/vscode/Desktop/work",
    "PDK_ROOT": "/workspaces/.pdk",
    "PDK": "sky130A",
    "STD_CELL_LIBRARY": "sky130_fd_sc_hd",
    "DISPLAY": ":0",
    "NOVNC_PORT": "6080"
  },
  "forwardPorts": [6080],
  "postCreateCommand": "bash .devcontainer/postcreate_min.sh",
  "postStartCommand": "supervisord -c .devcontainer/supervisord.conf || true",
  "overrideCommand": false,
  "init": true
}
