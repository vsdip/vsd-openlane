{
  "name": "OpenROAD cloud tools",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "onAutoForward": "openBrowser"
    }
  },
  "overrideCommand": false,
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "containerEnv": {
    "DISPLAY": ":1"
  }
}
