{
  "name": "OpenLane (superstable) with Podman + noVNC",
  "build": { "dockerfile": "Dockerfile" },

  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  "containerEnv": {
    "OPENLANE_DIR": "/workspaces/OpenLane",
    "WORKSHOP_HOME": "/home/vscode/Desktop/work",
    "PDK_ROOT": "/workspaces/.pdk",
    "PDK": "sky130A",
    "STD_CELL_LIBRARY": "sky130_fd_sc_hd",
    "DISPLAY": ":0",
    "NOVNC_PORT": "6080"
  },

  "mounts": [
    "source=ol-pdk-cache,type=volume,target=/workspaces/.pdk",
    "source=ol-images-cache,type=volume,target=/var/lib/containers"
  ],

  "forwardPorts": [6080],

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "supervisord -c .devcontainer/supervisord.conf || true",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools",
        "ms-vscode.gitlens"
      ]
    }
  }
}
